

<h2> Choose your flavor</h2>
<% @icecreams.each do |icecream| %>
   <div>
   <h3> <%= icecream.flavor %> </h3> <h4> £<%= icecream.price %> </h4>
   </div>

   <p> <%= form_tag('/add_ice_cream', method:'post') do %>
     <%= hidden_field_tag :id, icecream.id %>
     <%= number_field_tag :quantity, "1", in: 1...10 %>
     <%= submit_tag 'Add to Cart' %> </p>
   <% end %>

<% end %>




<html>



<title>W3.CSS Template</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Karma">
<style>
body,h1,h2,h3,h4,h5,h6 {font-family: "Karma", sans-serif}
.w3-bar-block .w3-bar-item {padding:20px}

body { 
    padding-top: 80px; 
    font-family: Arvo; 
    background-image: url('/assets/homepage/pink.jpg'); 
    background-size: cover;
  }

</style>
<body>


<!-- Sidebar (hidden by default) -->
<nav class="w3-sidebar w3-bar-block w3-card w3-top w3-xlarge w3-animate-left" style="display:none;z-index:2;width:40%;min-width:300px" id="mySidebar">
  <a href="javascript:void(0)" onclick="w3_close()"
  class="w3-bar-item w3-button">Close Menu</a>
  <a class="w3-bar-item w3-button"><%= link_to 'All Ice Creams', ice_creams_path %></a>
   <a class="w3-bar-item w3-button"><%= link_to 'Your previous orders', orders_path %></a>
    <a class="w3-bar-item w3-button"><%= link_to 'What other people have ordered', all_orders_path %></a>
  <a class="w3-bar-item w3-button"><%= link_to 'My cart', cart_path %></a>
</nav>

<!-- Top menu -->
<div class="w3-top">
  <div class="w3-white w3-xlarge" style="max-width:1200px;margin:auto">
    <div class="w3-button w3-padding-16 w3-left" onclick="w3_open()">☰</div>
    <div class="w3-center w3-padding-16">Ice Cream!</div>
  </div>
</div>

<!-- !PAGE CONTENT! -->
<div class="w3-main w3-content w3-padding" style="max-width:1200px;margin-top:100px">

<!-- First Photo Grid-->
  <div class="w3-row-padding w3-padding-16 w3-center" id="food">
    <div class="w3-quarter">
      <img src= "assets/ice_cream/cookiesandcream.jpg" alt="Sandwich" style="width:100%">
      <h3><font color="white"> The Perfect Chocolate Ice Cream, A Real Classic</font></h3>
    </div>

    
    <div class="w3-quarter">
      <img src="assets/ice_cream/vanilla.jpg" alt="vanilla" style="width:100%">
      <h3><font color="white"> Can never go wrong with vanilla</font></h3>
    </div>
    <div class="w3-quarter">
      <img src="assets/ice_cream/berry.jpg" alt="strawberry" style="width:100%">
      <h3><font color="white"> Refreshing Strawberry</font></h3>
    </div>
    <div class="w3-quarter">
      <img src="assets/ice_cream/banana.jpg" alt="bananas" style="width:100%">
      <h3><font color="white"> Will make you go bananas</font></h3>
    </div>
  </div>


  <!-- Second Photo Grid-->
  <div class="w3-row-padding w3-padding-16 w3-center" id="food">
    <div class="w3-quarter">
      <img src= "assets/ice_cream/raisin.jpg" alt="Sandwich" style="width:100%">
      <h3><font color="white"> Rum and Raisin</font></h3>
    </div>

    <div class="w3-quarter">
      <img src="assets/ice_cream/choco.jpg" alt="vanilla" style="width:100%">
      <h3><font color="white"> Cookies & Cream</font></h3>
    </div>
    <div class="w3-quarter">
      <img src="assets/ice_cream/cookie.jpg" alt="cookie" style="width:100%">
      <h3><font color="white">Cookie Dough</font></h3>
    </div>
    <div class="w3-quarter">
      <img src="assets/ice_cream/cherry.jpg" alt="cherry" style="width:100%">
      <h3><font color="white"> Cherry </font></h3>
    </div>
  </div>

  <!-- End page content -->
</div>

<script>
// Script to open and close sidebar
function w3_open() {
  document.getElementById("mySidebar").style.display = "block";
}
 
function w3_close() {
  document.getElementById("mySidebar").style.display = "none";
}
</script>

</body>
</html>

